{% extends "Dockerfile.template" %}

{% set base_image = "registry.access.redhat.com/ubi8/ubi" %}

{% block licenses %}
# Licenses is required to pass Redhat verification process
# TODO: Add a proper license
COPY LICENSE /licenses/mongodb-enterprise-ops-manager
{% endblock %}

{% block packages %}
RUN yum install --disableplugin=subscription-manager -y \
  cyrus-sasl \
  cyrus-sasl-gssapi \
  cyrus-sasl-plain \
  krb5-libs \
  libcurl \
  libpcap \
  lm_sensors-libs \
  net-snmp \
  net-snmp-agent-libs \
  openldap \
  openssl \
  rpm-libs \
  net-tools \
  procps-ng \
  ncurses
{% endblock %}
